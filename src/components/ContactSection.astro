<section id="contact"
    class="min-h-screen flex 
    flex-col justify-center items-center 
    text-center px-4 bg-cover bg-center">

    <h1 class="uppercase text-3xl sm:text-3xl md:text-4xl font-extrabold text-black mb-4 mt-15">Contact Me</h1>

    <!-- indicator -->
    <div class="w-16 h-1 bg-slate-500 mb-5"></div>

    <!-- basic description -->
    <p class="text-lg sm:text-xl font-semibold text-gray-950 max-w-3xl mb-10">
        Got a project in mind, a question, or just want to say hi? I'm here to help!
    </p>

    <!-- contact form -->
    <div class="flex flex-col md:flex-row gap-5 md:items-start">

        <!-- basic info -->
        <div class="w-full md:w-1/2 flex flex-col items-center justify-center text-center md:items-start md:text-start">
            <img src="/images/profile/profile_pic.png" alt="Bryan Martínez" class="w-72 h-72 rounded-lg object-cover mb-4 md:mr-8" />
            <div>
                <p class="text-xl font-bold mb-2">Looking for a Frontend Developer? </p>
                <p class="font-semibold mb-1">bryanalbertomo@gmail.com</p>
                <p class="text-gray-600">+502 4496-9844</p>
            </div>
        </div>

        <!-- contact form -->
        <div class="w-full md:w-1/2 px-2">
        
            <form 
                method="POST"
                action="https://formsubmit.co/bryanalbertomo@gmail.com"
                class="flex flex-col gap-5 w-full"
                onsubmit="return validateForm()"
            >
                <label for="email" class="text-start font-semibold">Your email address*</label>
                <input 
                    type="email" 
                    name="email" 
                    id="email" 
                    required 
                    placeholder="Your email address"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-slate-500 mb-2.5"
                />

                <label for="message" class="text-start font-semibold">Your message*</label>
                <textarea 
                    name="message" 
                    id="message" 
                    rows="5" 
                    required 
                    maxlength="2500"
                    placeholder="Tell me more about your idea, your site, or any details you'd like to share."
                    class="border border-gray-300 rounded px-4 py-2 resize-none focus:outline-none focus:ring-2 focus:ring-slate-500 mb-4"
                ></textarea>

                <button
                    type="submit"
                    class="relative bg-gradient-to-r from-slate-800 to-slate-700 
                    hover:from-slate-500 hover:to-slate-400 
                    text-white font-semibold py-2 px-8 rounded shadow-lg 
                    transition-all duration-300 focus:outline-none group"
                    >
                    <span class="block transition-transform duration-300 group-hover:translate-x-1">
                        Send →
                    </span>
                </button>
            </form>

            <script>
                function validateForm() {
                    const email = document.getElementById('email');
                    const message = document.getElementById('message');
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

                    if (!email.value || !emailRegex.test(email.value)) {
                        alert('Please enter a valid email address.');
                        return false;
                    }

                    if (!message.value.trim()) {
                        alert('Please enter a message.');
                        return false;
                    }
                    return true;
                }
            </script>

        </div>


    </div>

</section>